<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Surname</th>
      <th>Phone</th>
      <th>Notes</th>
      <th>Professional</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.sort_by(&:date).each do |appointment| %>
      <tr>
        <td><%= appointment.date %></td>
        <td><%= appointment.name %></td>
        <td><%= appointment.surname %></td>
        <td><%= appointment.phone %></td>
        <td><%= appointment.notes %></td>
        <td><%= appointment.professional.name %></td>
        <% if can? :manage, @professional %>
                <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
                <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><%= link_to 'Show', appointment %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if can? :manage, @professional %>
  <%= link_to 'New Appointment', new_appointment_path %> 
<% end %>
<% if can? :manage, @professional %>
  <%= link_to 'Export Appointments', "/appointments/export" %>
<% end %>

